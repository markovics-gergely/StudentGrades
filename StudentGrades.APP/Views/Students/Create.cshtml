@model StudentGrades.BLL.DTOs.Student

@{
    Layout = "_Layout";
}

@using (Html.BeginForm("Create", "Students", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card bg-secondary">
        <div class="card-body">
            <h2 class="card-title text-center text-white">Add new student</h2>
            <div class="form-group row">
                <div class="col mb-1 col-md-4 col-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.LabelFor(m => m.Name, new { @class = "col-form-label mx-3" })
                        </div>
                    </div>
                </div>
                <div class="col mb-1 col-md-8 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mx-3">
                                @Html.TextBoxFor(m => m.Name, new { placeholder = "Student name", @class = "form-control col-md-6" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger ml-3" })
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="form-group row">
                <div class="col mb-1 col-md-4 col-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.LabelFor(m => m.Year, new { @class = "col-form-label mx-3" })
                        </div>
                    </div>
                </div>
                <div class="col mb-1 col-md-8 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mx-3">
                                @Html.EditorFor(m => m.Year, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Select year", min = "1", max = "12" } })
                                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger ml-3" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col mb-1 col-md-4 col-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.LabelFor(m => m.BirthDate, new { @class = "col-form-label mx-3" })
                        </div>
                    </div>
                </div>
                <div class="col mb-1 col-md-8 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mx-3">
                                @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger ml-3" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col mb-1 col-md-4 col-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-form-label mx-3" })
                        </div>
                    </div>
                </div>
                <div class="col mb-1 col-md-8 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mx-3">
                                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger ml-3" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <button type="submit" class="btn btn-secondary btn-outline-light" style="width:100%">Submit</button>
                </div>
            </div>
        </div>
    </div>}